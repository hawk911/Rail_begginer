<tr>
  <td><%= carriage.name %></td>
    <% if carriage.train.nil? %>
      <td> Вагон не назначен </td>
    <% else %>
      <td> <b>Поезд </b> № <%= carriage.train.number%> </td>
    <% end %>

    <% if carriage.number.nil? %>
      <td> Номер вагону не назначен </td>
    <% else %>
      <td> <b>Номер вагона: </b> <%= carriage.number%> </td>
    <% end %>

    <% if carriage.type.nil? || carriage.type.empty? %>
      <td> Тип не назначен </td>
    <% else %>
      <td> <b>Тип вагона: </b> <%= carriage.type %></td>
    <% end %>
  <td><%= link_to 'Show', [:admin,carriage] %></td>
  <td><%= link_to 'Edit', edit_admin_carriage_path(carriage) %></td>
  <td><%= link_to 'Destroy', [:admin,carriage], method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
