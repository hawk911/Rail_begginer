<tr>
  <td><%= carriage.name %></td>
    <% if carriage.train.nil? %>
      <td> Вагон не назначен </td>
    <% else %>
      <td> Поезд № <%= carriage.train.number%> </td>
    <% end %>
    <% if carriage.carriage_type.nil? %>
      <td> Тип не назначен </td>
    <% else %>
      <td> Тип вагона: <%= carriage.carriage_type.name %></td>
    <% end %>
  <td><%= link_to 'Show', carriage %></td>
  <td><%= link_to 'Edit', edit_carriage_path(carriage) %></td>
  <td><%= link_to 'Destroy', carriage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
