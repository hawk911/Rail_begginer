<p id="notice"><%= notice %></p>

<h1>Listing Carriages</h1>

<table>
  <thead>
  <tr>
    <th>Train</th>
    <th>Type</th>
    <th>Carriage Number</th>
  </tr>
  </thead>

  <tbody>
  <% @carriages.each do |carriage| %>
      <tr>
        <td><%= carriage.train.number %></td>
        <td><%= carriage.type %></td>
        <td><%= carriage.number %></td>
        <td><%= link_to 'Show', carriage.becomes(Carriage) %></td>
        <td><%= link_to 'Edit', edit_carriage_path(carriage) %></td>
        <td><%= link_to 'Destroy', carriage.becomes(Carriage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

